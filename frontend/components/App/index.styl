body
  font-family: 'Noto Sans'
  font-weight: 200
  font-size 14px
  color #555

.text-center
  text-align: center

.titleB
  display: block

.titleH1
  display: block
  margin-bottom: 30px
  font-size 60px
  color #8d8d8d

html, body, #root, .content
  height: 100%

#root
  padding: 30px 0px
  box-sizing: border-box

html, body
  margin: 0

h1, h2, h3
  margin: 0

input, textarea
  box-sizing border-box

button:hover
  cursor pointer

ul
  list-style none
  padding: 0
  margin: 0


.t-center
  text-align: center

.App
  display: block

  .title
    display: block
    margin-bottom: 15px

  .button
   display: inline-block
   padding: 15px
   border 1px solid #555555
   border-radius 4px

  .list
   padding: 15px 0px

   .item
     padding: 15px 0px
